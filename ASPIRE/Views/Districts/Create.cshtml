@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using ASPIRE.Constants
@model ASPIRE.Models.Domain.MasterSetup.District

@{
    ViewData["Title"] = "Create";
    ViewBag.pageTitle = "Division";
    ViewBag.Title = "District";
    ViewBag.pTitle = "District";

    Layout = "~/Views/_Shared/_Layout.cshtml";
}


@if (true)
{
    <div class="checkout-tabs">
        <div class="row">            
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-privacy" role="tabpanel" aria-labelledby="v-pills-privacy-tab">
                                @{
                                    if (ViewBag.message != null)
                                    {
                                        if (ViewBag.val == 1)
                                        {
                                            <div id="FetchDataOnSuccess" class="alert alert-success alert-dismissible fade show" role="alert">
                                                <div id="FetchDataOnSuccessText">@ViewBag.message</div>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <div id="FetchDataOnFailed" class="alert alert-danger alert-dismissible fade show" role="alert">
                                                <div id="FetchDataOnFailedText">@ViewBag.message</div>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        }
                                    }
                                }
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h4 class="mt-2 card-title">Add New District</h4>
                                        </div>
                                        @*<div class="col-sm-6">
                    <div class="text-sm-right">
                        <a asp-action="Index" type="button" class="btn btn-primary btn-rounded waves-effect waves-light mr-2">Back to List</a>
                    </div>
                </div>*@<!-- end col-->
                                    </div>
                                </div>
                                <form asp-action="Create">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="DivisionId" class="control-label"></label>
                                                <select asp-for="DivisionId" class="form-control" asp-items="ViewBag.DivisionId"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" class="form-control" placeholder="District Name" required />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Code" class="control-label"></label>
                                                <input asp-for="Code" class="form-control" placeholder="District Code" required data-parsley-maxlength="3" />
                                                <span asp-validation-for="Code" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Description" class="control-label"></label>
                                                <textarea class="input-large form-control" asp-for="Description" rows="4" placeholder="Enter a description ..."></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Add District" class="btn btn-primary" />
                                            </div>
                                            <div class="form-group">
                                                <a asp-action="Index" asp-route-id="@ViewBag.Id">Back to list</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        <h4 class="text-uppercase">Sorry, page not found</h4>
                        @*<div class="mt-5 text-center">
                                <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}