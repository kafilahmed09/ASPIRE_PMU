@model IEnumerable<ASPIRE.Models.Domain.MasterSetup.School>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using ASPIRE.Constants

@{
    ViewData["Title"] = "Index";
    ViewBag.pageTitle = "ASPIRE";
    ViewBag.Title = "Schools";
    ViewBag.pTitle = "Schools";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}


@if (true)
{
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-autoFill-bs4/css/autoFill.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-keytable-bs4/css/keyTable.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <div class="checkout-tabs">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-gen-ques" role="tabpanel" aria-labelledby="v-pills-gen-ques-tab">
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <h4 class="mt-2 card-title">List of Selected Schools</h4>
                                </div>
                                <div class="table-responsive">
                                    <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.District)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Tehsil)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UC)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.BEMISCode)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SchoolName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SchoolLevel)
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.District)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Tehsil)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UC)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.BEMISCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SchoolName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SchoolLevel)
                                                    </td>
                                                    <td>
                                                        <a asp-action="ListOfIndicator" asp-controller="Schools" asp-route-id="@item.SchoolId" asp-route-FileType="@ViewBag.Id">Track</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        <h4 class="text-uppercase">Sorry, page not found</h4>
                        @*<div class="mt-5 text-center">
                                <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#datatable").DataTable();
        });
    </script>
}