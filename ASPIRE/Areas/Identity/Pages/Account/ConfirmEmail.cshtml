@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
}


<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center text-muted">
                    <a asp-area="Identity" asp-page="/Account/Login" class="d-block auth-logo">
                        <img src="~/assets/images/Food.svg" alt="" height="60" class="auth-logo-dark mx-auto">
                        <img src="~/assets/images/Food.png" alt="" height="60" class="auth-logo-light mx-auto">
                    </a>
                    <h5 class="mt-3">ASPIRE</h5>
                </div>
            </div>
        </div>
        <!-- end row -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body">

                        <div class="p-2">
                            <div class="text-center">

                                <div class="avatar-md mx-auto">
                                    <div class="avatar-title rounded-circle bg-light">
                                        <i class="bx bx-mail-send h1 mb-0 text-primary"></i>
                                    </div>
                                </div>
                                <div class="p-2 mt-4">
                                    <p class="success">Email Confirmed</p>
                                    <h4>Success !</h4>
                                    <p class="text-muted">PRO-ACTIVE APPROACH FOR ASPIRE</p>
                                    <div class="mt-4">
                                        <a href="/" class="btn btn-success">Back to Home</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">

                    <p>
                        ©
                        <script>document.write(new Date().getFullYear())</script> Food. Crafted with <i class="mdi mdi-heart text-danger"></i> by ICT Section
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>




